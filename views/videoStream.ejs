        <script>
          
          const target = '<%-title%>';
          //Selector for your <video> element
          const video = document.getElementById('local');
          const video2 = document.getElementById('remote');

          const socket = io({
            auth: {
              token: target
            }
          });

          //Core
          if (target == 'videoStream 1'){
            const peer = new Peer('ballgame', {
                          path: "/peerjs",
                          host: "/",
                          port: "111",
                        });
            window.navigator.mediaDevices.getUserMedia({ video: true })
              .then(stream => {
                  video.srcObject = stream;
                  peer.on('call', call => {
                    call.answer(stream)
                  });
                  
                  video.onloadedmetadata = (e) => {
                      video.play();
                  };
                  socket.on('send', ()=>{
                    const call = peer.call('ballreview', stream);
                  });
                  
                  
              })
              .catch( () => {
                  alert('You have give browser the permission to run Webcam and mic ;( ');
              });
          }
          
          if(target == 'videoStream 2'){
            const peer = new Peer('ballreview', {
                          path: "/peerjs",
                          host: "/",
                          port: "111",
                        });
            socket.emit(target);
            peer.on('call', call => {
              // call.answer(stream)
              call.on("stream", (userVideoStream) => {
                video2.srcObject = userVideoStream;
                video2.onloadedmetadata = (e) => {
                  video2.play();
                };
              });
            });
